<%-include('Admin_partial/header')-%>
<div class="main-panel">
    <div class="content-wrapper">
      <div class="page-header">
        <h3 class="page-title" style="margin-left:200px;padding-top:20px">
          <b>Liste des commandes</b>
        </h3>
        <a href="/customer/registration"><button style=" margin-top: 20px;margin-right: 100px"class="btn btn-rounded btn-fw btn-gradient-primary btn-fw">Add New</button> </a>
        </div>
        <div class="col-lg-12 stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                    <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Numéro</th>        
                                    <th>Client</th>
                                    <th>Produits</th>     
                                
                                    <th>Date</th>          
                                    <th>Prix total</th>
                                    <th>Etats de la commande</th>    
                                    <th>Action</th>  
                            
                                </tr>
                            </thead>
                            <tbody>
                              <% n=0; orders.forEach(order => { %>
                          
                                <tr>
                                  <td><%=`${n+=1}`%></td>
                                  <td><%=`${order.user.Customer_first_name}`%> <%=`${order.user.Customer_last_name }`%></td>
                                  <td>
                                    <% order.cart.forEach(item => { %>
                                       <div>
                                          <span>Produit: <%= item.product.Pro_name%></span>
                                          </br>
                                          <span>Quantité: <%= item.quantity%></span>
                                       </div>
                                       <br/>
                                    <% }) %>
                                  </td>
                                  
                                  <td><%= moment(order.date).format('DD/MM/YYYY à HH:mm') %><</td>
                                  <td><%= order.total %> FCFA</td>
                                  <td><%= order.status %></td>
                                  <td>
                                    <a href="show/<%=order._id%>"><img title="montrer" src="/images/icons/show.png"></a>
                                    <a href="edit/<%=order._id%>"><img title="modifier" src="/images/icons/edit.png"></a>
                                    <a href="delete/<%=order._id%>"><img title="suppromer" src="/images/icons/delete.png"></a>
                                  </td>
                                </tr>
                          
                              <% }) %>
                            </tbody>
                    </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
    <script src="../../vendors/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="../../js/off-canvas.js"></script>
    <script src="../../js/hoverable-collapse.js"></script>
    <script src="../../js/misc.js"></script>
    <script src="../../js/settings.js"></script>
    <script src="../../js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <!-- End custom js for this page-->
</body>


