<%-include('Admin_partial/header')-%>
<div class="main-panel">
    <div class="content-wrapper">
      <div class="page-header">
        <h3 class="page-title" style="margin-left:200px;padding-top:20px">
          <b>Liste des utilisateurs</b>
        </h3>
        <a href="/customer/registration"><button style=" margin-top: 20px;margin-right: 100px"class="btn btn-rounded btn-fw btn-gradient-primary btn-fw">Ajouter nouveau</button> </a>
        </div>
        <div class="col-lg-12 stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                    <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Index</th>        
                                    <th>Prenom</th>
                                    <th>Nom de famille</th>
                                    <th>Statut</th>     
                                    <th>Numéro de téléphone</th>
                                    <th>email</th>          
                                    <th>Sexe</th>    
                                    <th>Action</th>  
                            
                                </tr>
                            </thead>
                            <% if(customer_array.length>0)  { %>
                            <tbody>
                                <%  for(var i=0;i<customer_array.length;i++)  { %>
                                <tr>
                                    <td><%=i+1  %></td>
                              
                                    <td><%=customer_array[i].Customer_first_name %></td>
                                    <td><%=customer_array[i].Customer_last_name %></td>
                                    <% if(customer_array[i].isAdmin && customer_array[i].isVendor)  { %>
                                        <td>Vendeur</td>
                                    <%}else if(customer_array[i].isAdmin){%>
                                        <td>Administrateur</td>
                                    <% } else if (customer_array[i].isVendor) { %>
                                      <td>Administrateur et Vendeur</td>
                                    <%} else{%>
                                        <td>Simple utilisateur</td>
                                    <%}%>
                                    <td><%=customer_array[i].Customer_contact_no %></td>
                                    <td><%=customer_array[i].Customer_email %></td>
                                    <td><%=customer_array[i].Customer_gender%></t0d>
                                    <td>
                                            <a href="show/<%=customer_array[i]._id%>"><img title="show" src="/images/icons/show.png"></a>
                                            <a href="edit/<%=customer_array[i]._id%>"><img title="edit" src="/images/icons/edit.png"></a>
                                            <a href="delete/<%=customer_array[i]._id%>"><img title="delete" src="/images/icons/delete.png"></a>
                                    </td>
                                </tr>
                                <% } %>
                                <%  }   else    {%>
                                    <h2>Pas d'enregistrement trouvé</h2>
                                    <%  }   %>
                            </tbody>
                    </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="confirmModal" style="display: none;">
      <div class="modal" >
        <div class="modal-content">
          <h2>Confirmation de suppression</h2>
          <p>Êtes-vous sûr de vouloir supprimer cet élément ?</p>
        <div class="modal-buttons">
          <button id="confirmDelete" class="btn btn-primary btn-sm">Oui</button>
          <button id="cancelDelete" class="btn btn-danger btn-sm">Non</button>
        </div>
      </div>
    </div>
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
    <script src="../../vendors/js/vendor.bundle.addons.js"></script>
