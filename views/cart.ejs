    <script>
        // Stocker toutes les localités au début
        const allLocalities = Array.from(document.querySelectorAll('#shipping-locality option[data-city]'));

        // JavaScript pour mettre à jour la liste des localités en fonction de la ville sélectionnée
        document.getElementById('shipping-city').addEventListener('change', function () {
            const selectedCity = this.value;
            const localitySelect = document.getElementById('shipping-locality');

            // Réinitialiser la liste des localités
            localitySelect.innerHTML = '<option selected value="">Veuillez choisir une localité</option>';

            // Filtrer les localités en fonction de la ville sélectionnée
            allLocalities.forEach(function (locality) {
                if (locality.getAttribute('data-city') === selectedCity) {
                    localitySelect.appendChild(locality.cloneNode(true));
                }
            });

            // Activer le champ des localités s'il y a une ville sélectionnée
            localitySelect.disabled = !selectedCity;
        });
    </script>
