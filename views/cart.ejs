                <div class="section__content">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 u-s-m-b-30">
                                <form class="f-cart" method="POST"
                                action="/user/checkout">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-6 u-s-m-b-30">
                                            <div class="f-cart__pad-box">
                                                <h1 class="gl-h1">ESTIMER LES FRAIS DE LIVRAISON</h1>

                                                <span class="gl-text u-s-m-b-30">Renseignez votre adresse de livraison pour avoir une estimation des frais de livraison.</span>
                                                <div class="u-s-m-b-30">

                                                    <!--====== Select Box ======-->

                                                    <label class="gl-label" for="shipping-country">PAYS *</label><select class="select-box select-box--primary-style" id="shipping-country">
                                                        <option selected value="Burkina-Faso">Burkina-Faso</option>
                                                    </select>
                                                    <!--====== End - Select Box ======-->
                                                </div>
                                                <div class="u-s-m-b-30">
                                                    <% if (typeof(cost) !== "undefined" ) { %>
                                                        <!--====== Select Box - Ville ======-->
                                                        <label class="gl-label" for="shipping-city">Ville *</label>
                                                        <select class="select-box select-box--primary-style" id="shipping-city" name="city">
                                                            <option selected value="<%=city._id%>"> <%=city.name %></option>
                                                            <% addresses.forEach(function(address) { %>
                                                                <option value="<%= address._id %>"><%= address.name %></option>
                                                            <% }); %>
                                                        </select>
                                                        <label class="gl-label" for="shipping-locality">Localité *</label>
                                                        <select class="select-box select-box--primary-style" id="shipping-locality" name="locality" readonly >
                                                            <option selected value="<%=locality._id%>"><%=locality.name%></option>
                                                            <% addresses.forEach(function(address) { %>
                                                                <% address.localities.forEach(function(locality) { %>
                                                                    <option data-city="<%= address._id %>" value="<%= locality._id %>"><%= locality.name %></option>
                                                                <% }); %>
                                                            <% }); %>
                                                        </select>
                                                    <% }else { %>
                                                    <!--====== Select Box - Ville ======-->
                                                    <label class="gl-label" for="shipping-city">Ville *</label>
                                                    <select class="select-box select-box--primary-style" id="shipping-city" name="city">
                                                        <option selected value="">Veuillez choisir une ville</option>
                                                        <% addresses.forEach(function(address) { %>
                                                            <option value="<%= address._id %>"><%= address.name %></option>
                                                        <% }); %>
                                                    </select>
                                                
                                                    <!--====== Select Box - Localité ======-->
                                                    <label class="gl-label" for="shipping-locality">Localité *</label>
                                                    <select class="select-box select-box--primary-style" id="shipping-locality" name="locality" disabled>
                                                        <option selected value="">Veuillez choisir une localité</option>
                                                        <% addresses.forEach(function(address) { %>
                                                            <% address.localities.forEach(function(locality) { %>
                                                                <option data-city="<%= address._id %>" value="<%= locality._id %>"><%= locality.name %></option>
                                                            <% }); %>
                                                        <% }); %>
                                                    </select>
                                                    <!--====== End - Select Box ======-->
                                                    <% } %>
                                                </div>
                                                
                                                <div class="u-s-m-b-30">
                                                    <a id="calculateShippingBtn" class="f-cart__ship-link btn--e-transparent-brand-b-2" href="#">CALCULER LES FRAIS DE LIVRAISON</a>
                                                </div>
                                                <span class="gl-text">Info: Notez que la livraison n'est pas encore disponible dans certaines  villes ou localités.
                                                    Nous oeuvrons pour agrandir le plus possible la liste des lieux de livraison.   
                                               .</span>
                                            </div>
                                        </div>
                                        <% if (typeof(cost) !== "undefined" ) { %>
                                            <div class="col-lg-4 col-md-6 u-s-m-b-30">
                                                <div class="f-cart__pad-box">
                                                    <div class="u-s-m-b-30">
                                                        <table class="f-cart__table">
                                                            <tbody>
                                                                
                                                                    <tr>
                                                                        <td>TOTAL</td>
                                                                        <td><%=`${total}`%> FCFA</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>LIVRAISON</td>
                                                                        <td><%=`${cost}`%> FCFA</td>
                                                                    </tr>
                                                                    
                                                                    <tr>
                                                                        <td>GRAND TOTAL</td>
                                                                        <td><%=`${grandTotal}`%> FCFA</td>
                                                                    </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <div>
                                                        <button class="btn btn--e-brand-b-2" type="submit"> PASSER A LA CAISSE</button>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }%>
                                        <div class="col-lg-4 col-md-6 u-s-m-b-30">
                                            <div class="f-cart__pad-box">
                                                <h1 class="gl-h1">NOTE</h1>

                                                <span class="gl-text u-s-m-b-30">Ajoutez une note spéciale pour votre produit</span>
                                                <div>

                                                    <label for="f-cart-note"></label><textarea class="text-area text-area--primary-style" id="f-cart-note"></textarea></div>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Content ======-->
            </div>
            <!--====== End - Section 3 ======-->
        </div>
        <!--====== End - App Content ======-->


        <!--====== Main Footer ======-->
        <%- include("partials/footer") %>
    </div>
    <!--====== End - Main App ======-->


