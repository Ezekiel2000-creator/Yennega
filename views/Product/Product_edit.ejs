<%-include('header')-%>
            <!-- HEADER DESKTOP-->
            <!-- MAIN CONTENT-->
        <div class="main-panel">
            <div class="content-wrapper">
                    <div class="page-header" style="margin-bottom:30px; margin-right:30px">
                            <h3 class="page-title" style="margin-left:200px;padding-top:20px">
                            <b>Product Edit Form</b>
                            </h3>
                            <a href="/customer/data_display" ><img src="/images/icons/back.png" width="30px" style="margin-left: 20px;margin-top: 20px; margin-bottom: 20px" title="back"alt="back"></a>
                    </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                      <div class="card-body">
                        <h4 class="card-title">Modifier le produit</h4>
                  
                        <form method="POST" id="uploadform" ref="uploadform" enctype="multipart/form-data" class="form-row">
                          <div class="col-md-6">
                            <label for="Product_id" class="form-control-label">ID du produit</label>
                            <input
                              type="text"
                              placeholder="Entrez l'ID du produit"
                              name="Product_id"
                              value="<%=product_array.Product_id %>"
                              class="form-control"
                              readonly
                            />
                  
                            <label for="Pro_name" class="form-control-label">Nom du produit</label>
                            <input
                              type="text"
                              placeholder="Entrez le nom du produit"
                              name="Pro_name"
                              value="<%=product_array.Pro_name %>"
                              class="form-control"
                            />
                  
                            <label for="Product_image" class="form-control-label">Image du produit</label>
                            <img
                              name="past_image"
                              src="/Pro_upload/<%=product_array.Pro_image%>"
                              width="100px"
                              alt="img"
                            />
                            <input
                              type="file"
                              name="Pro_image"
                              class="form-control"
                              accept="image/*"
                            />
                            <input
                              type="text"
                              value="<%=product_array.Pro_image%>"
                              name="past_image"
                              class="form-control"
                              hidden
                            />
                  
                            <label for="Pro_descriptioin" class="form-control-label">Détails du produit</label>
                            <textarea
                              placeholder="Veuillez entrer les détails concernant le produit"
                              name="Pro_description"
                              class="form-control"
                            ><%=product_array.Pro_description %></textarea>
                          </div>
                  
                          <div class="col-md-6">
                            <label for="Pro_subcategory" class="form-control-label">Catégorie du produit</label>
                            <select name="Pro_subcategory" class="form-control">
                              <% categories.forEach(categorie => { %>
                              <option value="<%= categorie._id %>"><%= categorie.subcate_name %></option>
                              <% }); %>
                            </select>
                  
                            <label for="Pro_vendor" class="form-control-label">Vendeur</label>
                            <select name="Pro_vendor" class="form-control">
                              <% vendors.forEach(vendor => { %>
                              <option value="<%= vendor._id %>"><%= vendor.Customer_first_name %> <%= vendor.Customer_last_name %></option>
                              <% }); %>
                            </select>
                  
                            <label for="Pro_quantity" class="form-control-label">Quantité du produit</label>
                            <input
                              type="Number"
                              placeholder="Entrez la quantité du produit"
                              name="Pro_quantity"
                              class="form-control"
                              value="<%=product_array.Pro_quantity %>"
                            />
                  
                            <label for="Pro_rentprice" class="form-control-label">Prix de vente</label>
                            <input
                              type="Number"
                              placeholder="Entrez le prix de vente"
                              name="Pro_rentprice"
                              class="form-control"
                              value="<%=product_array.Pro_rentprice %>"
                            />
                  
                            <label for="Pro_ammount" class="form-control-label">Prix de vente de comparaison</label>
                            <input
                              type="Number"
                              placeholder="Entrez le prix de vente de comparaison"
                              name="Pro_ammount"
                              class="form-control"
                              value="<%=product_array.Pro_ammount %>"
                            />
                          </div>
                  
                          <div class="form-group mt-5">
                            <button type="submit" class="btn btn-primary">Valider</button>
                            <button type="reset" class="btn btn-light">Réinitialiser</button>
                         </div>
                        </div>
                    </div> 
                </div>
                  
            </div>
        </div>
            <!-- content-wrapper ends -->
            <!-- partial:../../partials/_footer.html -->
            <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2018 <a href="https://www.urbanui.com/" target="_blank">Urbanui</a>. All rights reserved.</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="mdi mdi-heart text-danger"></i></span>
        </div>
            </footer>
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/vendors/js/vendor.bundle.base.js"></script>
    <script src="/vendors/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="/js/off-canvas.js"></script>
    <script src="/js/hoverable-collapse.js"></script>
    <script src="/js/misc.js"></script>
    <script src="/js/settings.js"></script>
    <script src="/js/todolist.js"></script>
    <!-- endinject -->
