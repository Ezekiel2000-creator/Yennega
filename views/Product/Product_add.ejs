           <!-- MAIN CONTENT-->
            <div class="main-panel">
                <div class="content-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Créer un nouveau produit</h4>
                              
                                <form
                                  action="regi_process"
                                  method="POST"
                                  id="uploadform"
                                  ref="uploadform"
                                  enctype="multipart/form-data"
                                  class="form-row"
                                >
                                  <div class="col-md-6">
                                    <label for="Product_id" class="form-control-label">Product_Id</label>
                                    <input
                                      type="text"
                                      placeholder="Enter Product id"
                                      name="Product_id"
                                      class="form-control"
                                    />
                              
                                    <label for="Pro_name" class="form-control-label">Nom du produit</label>
                                    <input
                                      type="text"
                                      placeholder="Enter Product Name"
                                      name="Pro_name"
                                      class="form-control"
                                    />
                              
                                    <label for="Pro_description" class="form-control-label">
                                      Détails du produit
                                    </label>
                                    <textarea
                                      placeholder="Veuillez entrer les détails concernant le produit"
                                      name="Pro_description"
                                      class="form-control"
                                    ></textarea>

                                    <label for="Pro_subcategory" class="form-control-label">
                                        Catégorie du produit
                                      </label>
                                      <select name="Pro_subcategory" class="form-control">
                                        <% categories.forEach(categorie => { %>
                                        <option value="<%= categorie._id %>"><%= categorie.subcate_name %></option>
                                        <% }); %>
                                      </select>
                                  </div>
                              
                                  <div class="col-md-6">
                                    <label for="Pro_vendor" class="form-control-label">Vendeur</label>
                                    <select name="Pro_vendor" class="form-control">
                                      <% vendors.forEach(vendor => { %>
                                      <option value="<%= vendor._id %>"><%= vendor.Customer_first_name %> <%= vendor.Customer_last_name %></option>
                                      <% }); %>
                                    </select>
                              
                                    <label for="Product_image" class="form-control-label">
                                      Image du produit
                                    </label>
                                    <input type="file" name="Pro_image" class="form-control" />
                              
                                    <label for="Pro_rentprice" class="form-control-label">
                                      Prix de vente du produit actuelle
                                    </label>
                                    <input
                                      type="Number"
                                      placeholder="Enter Product Rent Price"
                                      name="Pro_rentprice"
                                      class="form-control"
                                    />
                              
                                    <label for="Pro_ammount" class="form-control-label">
                                      Prix de comparaison du produit
                                    </label>
                                    <input
                                      type="Number"
                                      placeholder="Enter Product Amount "
                                      name="Pro_ammount"
                                      class="form-control"
                                    />
                                  </div>
                                  <div class="form-group mt-5">
                                    <button type="submit" class="btn btn-primary">Soumettre</button>
                                    <button type="reset" class="btn btn-light">Abandonner</button>
                                  </div>
                                </form>
                              </div>
                              
                        </div>
                    </div>
                </div>
            </div>
                <!-- content-wrapper ends -->
                <!-- partial:../../partials/_footer.html -->
                <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2018 <a href="https://www.urbanui.com/" target="_blank">Urbanui</a>. All rights reserved.</span>
                    <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="mdi mdi-heart text-danger"></i></span>
            </div>
                </footer>
