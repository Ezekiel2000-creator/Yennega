        <script>
            function logout() {
              // Créer une requête POST
              var xhr = new XMLHttpRequest();
              xhr.open("POST", "/signout", true);
              
              // Définir le type de contenu de la requête
              xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
              
              // Envoyer la requête
              xhr.send();
            }
          </script>
