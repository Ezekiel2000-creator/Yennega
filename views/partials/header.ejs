                        <!--====== Dropdown Main plugin ======-->
                        <div class="menu-init" id="navigation3">

                            <button class="btn btn--icon toggle-button fas fa-shopping-bag toggle-button-shop" type="button"></button>

                            <% if (typeof carts !== 'undefined' && carts.length > 0) { %>
                                <span class="total-item-round">
                                    <%=`${carts.length}`%>
                                </span>
                            <% } %>

                            <!--====== Menu ======-->
                            <div class="ah-lg-mode">

                                <span class="ah-close">✕ Fermer</span>

                                <!--====== List ======-->
                                <ul class="ah-list ah-list--design1 ah-list--link-color-secondary">
                                    <li>

                                        <a href="/accueil"><i class="fas fa-home"></i></a></li>
                                    <li>

                                        <a href="wishlist.html"><i class="far fa-heart"></i></a></li>
                                    <li class="has-dropdown">

                                        <a class="mini-cart-shop-link"><i class="fas fa-shopping-bag"></i>
                                            <% if (typeof carts !== 'undefined' && carts.length > 0) { %>
                                                <span class="total-item-round">
                                                    <%=`${carts.length}`%>
                                                </span>
                                            <% } %>
                                        </a>

                                        <!--====== Dropdown ======-->

                                        <span class="js-menu-toggle"></span>
                                        <div class="mini-cart">
                                            <% if (typeof carts !== 'undefined' && carts.length > 0) { %>
                                                <div class="mini-product-container gl-scroll u-s-m-b-15">
                                                <% carts.forEach((carts_product) => { %>
                                            <!--====== Mini Product Container ======-->
                                                        <!--====== Card for mini cart ======-->
                                                        
                                                            <div class="card-mini-product">
                                                                <div class="mini-product">
                                                                <div class="mini-product__image-wrapper">
                                                                    <a class="mini-product__link" href="product-detail.html">
                                                                    <img class="u-img-fluid" src="/Pro_upload/<%=`${carts_product.product.Pro_image}`%>" alt="">
                                                                    </a>
                                                                </div>
                                                                <div class="mini-product__info-wrapper">
                                                                    <span class="mini-product__category">
                                                                    <a href="shop-side-version-2.html"><%=`${carts_product.product.Pro_subcategory.subcate_name}`%></a>
                                                                    </span>
                                                                    <span class="mini-product__name">
                                                                    <a href="product-detail.html"><%=`${carts_product.product.Pro_name}`%></a>
                                                                    </span>
                                                                    <span class="mini-product__quantity"><%=`${carts_product.quantity}`%> x</span>
                                                                    <span class="mini-product__price"><%=`${carts_product.product.Pro_rentprice}`%> FCFA</span>
                                                                </div>
                                                                </div>
                                                                <a class="mini-product__delete-link far fa-trash-alt" onclick="deleteProduct('<%= carts_product.product._id %>')"></a>
                                                            </div>
                                                            
                                                        <!--====== End - Card for mini cart ======-->
                                            <!--====== End - Mini Product Container ======-->
                                                <% }) %>
                                                </div>
